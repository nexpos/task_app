<%= form_with(model: @task, remote: true) do |form| %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="form-group">
    <%= form.label :deadline, "When is it due?" %><br>
    <%= form.text_field :deadline, id: "datetimepicker1", class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
